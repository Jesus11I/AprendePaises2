<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Rusia">

    <EditText
        android:id="@+id/reloj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#483D8B"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/imageView2_Rusia"
        android:layout_below="@id/reloj"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/rusia" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView2_Rusia"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="40dp"
        android:addStatesFromChildren="false"
        android:orientation="vertical">

        <Button
            android:id="@+id/italia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="30dp"
            android:text="italia"
            android:textSize="25sp" />

        <Button
            android:id="@+id/rusia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="30dp"
            android:text="rusia"
            android:textSize="25sp" />

        <Button
            android:id="@+id/rumania"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:text="rumania"
            android:textSize="25sp" />
    </LinearLayout>

</RelativeLayout>