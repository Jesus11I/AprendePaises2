<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Francia"
    android:background="#E3F2FD">

    <EditText
        android:id="@+id/reloj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#483D8B"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/imageView2_francia"
        android:layout_below="@id/reloj"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/francia" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView2_francia"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="40dp"
        android:addStatesFromChildren="false"
        android:orientation="vertical">

        <Button
            android:id="@+id/holanda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="30dp"
            android:text="holanda"
            android:textSize="25sp" />

        <Button
            android:id="@+id/croacia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="30dp"
            android:text="croacia"
            android:textSize="25sp" />

        <Button
            android:id="@id/francia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:text="francia"
            android:textColor="#000000"
            android:textSize="25sp" />
    </LinearLayout>


</RelativeLayout>